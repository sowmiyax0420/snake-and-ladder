

<!DOCTYPE html><html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Snake and Ladder Game</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; }
    #board { display: grid; grid-template-columns: repeat(10, 50px); width: 500px; margin: 20px auto; }
    .cell { border: 1px solid #999; height: 50px; display: flex; align-items: center; justify-content: center; font-size: 12px; }
    #controls { margin-top: 20px; }
  </style>
</head>
<body>
  <h1>Snake and Ladder</h1>
  <div id="board"></div>
  <p id="status">Click Roll Dice to start</p>
  <div id="controls">
    <button onclick="rollDice()">Roll Dice</button>
  </div>  <script>
    const board = document.getElementById('board');
    const statusText = document.getElementById('status');
    let position = 1;

    // snakes and ladders mapping
    const moves = {
      16: 6, 47: 26, 49: 11, 56: 53, 62: 19, 64: 60, 87: 24, 93: 73, 95: 75, 98: 78, // snakes
      1: 38, 4: 14, 9: 31, 21: 42, 28: 84, 36: 44, 51: 67, 71: 91, 80: 100       // ladders
    };

    function drawBoard() {
      board.innerHTML = '';
      for (let i = 100; i >= 1; i--) {
        const cell = document.createElement('div');
        cell.className = 'cell';
        cell.textContent = i === position ? 'P' : i;
        board.appendChild(cell);
      }
    }

    function rollDice() {
      fetch('http://localhost:3000/roll')
        .then(res => res.json())
        .then(data => {
          let dice = data.dice;
          position += dice;
          if (position > 100) position = 100;
          if (moves[position]) position = moves[position];

          if (position === 100) {
            statusText.textContent = `You rolled ${dice}. You won! ðŸŽ‰`;
          } else {
            statusText.textContent = `You rolled ${dice}. Current position: ${position}`;
          }
          drawBoard();
        });
    }

    drawBoard();
  </script></body>
</html>//